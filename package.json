{
  "name": "h5p-xapi-server",
  "version": "1.8.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r dotenv/config src/index.ts",
    "dev": "nodemon -r dotenv/config src/index.ts",
    "release": "standard-version",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:compile && npm run build:copy-assets",
    "build:compile": "tsc -p tsconfig-build.json --outDir ./dist",
    "build:copy-assets": "cp -R ./views ./dist/views && cp README.md ./dist && cp CHANGELOG.md ./dist",
    "test": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:unit && npm run test:integration-ci",
    "test:coverage": "nyc --reporter=lcov --report-dir ./test-results/coverage.lcov npm run test",
    "test:codecov": "nyc --reporter=cobertura --report-dir ./test-results/coverage.xml npm run test:ci && codecov",
    "test:unit": "cross-env NEW_RELIC_HOME=tests LOG_STYLE=SILENT mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "cross-env DOTENV_CONFIG_PATH=./.env.test mocha --require ts-node/register -r dotenv/config tests/integration/**/*.test.ts --timeout 8000",
    "test:integration-ci": "cross-env DOTENV_CONFIG_PATH=./.env.test.ci mocha --require ts-node/register -r dotenv/config tests/integration/**/*.test.ts --timeout 8000",
    "lint": "eslint \"{src,tests}/**/*.ts\" --ext .ts",
    "lint-and-fix": "eslint \"{src,tests}/**/*.ts\" --ext .ts --fix",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\" \"*.json\"",
    "prepare": "husky install || exit 0",
    "pre-commit": "lint-staged",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --check"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/calmisland/h5p-xapi-server.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/calmisland/h5p-xapi-server#readme",
  "devDependencies": {
    "@apollo/client": "^3.4.16",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/cz-commitlint": "^13.2.1",
    "@fluffy-spoon/substitute": "^1.208.0",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cookie": "^0.4.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/elasticsearch": "^5.0.38",
    "@types/express": "^4.17.13",
    "@types/geoip-lite": "^1.4.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^8.2.3",
    "@types/newrelic": "^7.0.2",
    "@types/node": "^14.17.32",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^3.4.1",
    "http-terminator": "^3.0.3",
    "husky": "^7.0.4",
    "inquirer": "^8.2.0",
    "lint-staged": "^11.2.6",
    "mocha": "^9.1.3",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.14",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "standard-version": "^9.3.2",
    "subscriptions-transport-ws": "^0.11.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@aws-sdk/client-firehose": "^3.39.0",
    "@aws-sdk/client-kinesis": "^3.50.0",
    "@elastic/elasticsearch": "7.13.0",
    "@graphql-tools/graphql-file-loader": "^6.2.7",
    "@graphql-tools/load": "^6.2.8",
    "@newrelic/apollo-server-plugin": "^1.1.0",
    "apollo-server-express": "^2.25.2",
    "aws-sdk": "^2.1018.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.1",
    "geoip-lite": "^1.4.2",
    "graphql": "^15.7.2",
    "jsonwebtoken": "^8.5.1",
    "jstransformer-highlight": "^2.0.0",
    "jstransformer-markdown-it": "^2.1.0",
    "kidsloop-nodejs-logger": "bitbucket:calmisland/kidsloop-nodejs-logger#v0.2.14",
    "kidsloop-token-validation": "bitbucket:calmisland/kidsloop-token-validation#v1.4.1",
    "newrelic": "^8.5.0",
    "pg": "^8.7.1",
    "prom-client": "^13.2.0",
    "pug": "^3.0.2",
    "redis": "^4.0.6",
    "typeorm": "^0.2.38",
    "uuid": "^8.3.2"
  }
}
