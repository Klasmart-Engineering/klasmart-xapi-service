{
  "name": "h5p-xapi-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r dotenv/config src/entry.ts",
    "dev": "nodemon -r dotenv/config src/entry.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:coverage": "nyc --reporter=lcov --report-dir ./test-results/coverage.lcov npm run test",
    "test:codecov": "nyc --reporter=cobertura --report-dir ./test-results/coverage.xml npm test && codecov",
    "test:unit": "mocha --require ts-node/register tests/unit/**/*.test.ts",
    "test:integration": "mocha --require ts-node/register tests/integration/**/*.test.ts --timeout 8000",
    "lint": "eslint \"{src,tests}/**/*.ts\" --ext .ts",
    "lint-and-fix": "eslint \"{src,tests}/**/*.ts\" --ext .ts --fix",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\" \"*.json\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --check"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/calmisland/h5p-xapi-server.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/calmisland/h5p-xapi-server#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@fluffy-spoon/substitute": "^1.198.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.2.15",
    "@types/cookie": "^0.4.0",
    "@types/elasticsearch": "^5.0.37",
    "@types/express": "^4.17.11",
    "@types/geoip-lite": "^1.4.1",
    "@types/graphql-upload": "^8.0.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "commitlint": "^13.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "graphql-upload": "^12.0.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "mocha": "^8.3.2",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@aws-sdk/client-firehose": "^3.8.1",
    "@elastic/elasticsearch": "^7.11.0",
    "@graphql-tools/graphql-file-loader": "^6.2.7",
    "@graphql-tools/load": "^6.2.7",
    "apollo-server-express": "^2.21.0",
    "aws-sdk": "^2.897.0",
    "cookie": "^0.4.1",
    "express": "^4.17.1",
    "geoip-lite": "^1.4.2",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.6.0",
    "prom-client": "^13.1.0",
    "typeorm": "^0.2.34"
  }
}
